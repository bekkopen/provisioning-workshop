bundle agent check_user_www_data_exists_and_create_if_required {
        vars:
          "userWwwData" string => "www-data -d /home/www-data -s /bin/bash -m -U";

        classes:
          "userWwwData" expression => userexists("www-data");

        reports:
          !userWwwData::
                "The user www-data does not exist and I will attempt to create it.";

        commands:
          !userWwwData::
                "/usr/sbin/useradd $(userWwwData)";
}
